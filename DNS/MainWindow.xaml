<Window x:Class="DNSwitchy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <ComboBox Margin="10" Name="adapter" SelectionChanged="adapter_SelectionChanged"/>
            <TextBox Margin="10" Name="dns"/>
        </StackPanel>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Margin="10" Padding="5" Content="Save" HorizontalAlignment="Right"/>
            <Button Margin="10" Padding="5" Content="Quit" HorizontalAlignment="Right"/>
        </WrapPanel>

    </Grid>
</Window>
